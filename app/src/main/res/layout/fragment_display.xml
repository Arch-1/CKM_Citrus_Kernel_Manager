<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.citrus.ckm.com.ckm.CKM"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Switch
                    android:text="APPLY ON BOOT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/apply_on_boot_display_switch"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:textStyle="normal|bold"
                    android:textSize="12sp"
                    android:theme="@style/ApplyOnBoot" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:id="@+id/display_profile_card"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Display Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_profile"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:text="Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_profile_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:textAlignment="viewEnd"
                    android:textSize="12sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/diplay_colors_card"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Diplay Colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_colors"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp" />

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:text="Red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/red_text"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="12sp" />

                    <TextView
                        android:text="xxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/red_value_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="12sp"
                        android:textAlignment="viewEnd" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/red_bar"
                        android:paddingStart="60dp"
                        android:paddingEnd="60dp"
                        android:max="206" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:text="Green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/green_text"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="12sp" />

                    <TextView
                        android:text="xxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/green_value_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="12sp"
                        android:textAlignment="viewEnd" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/green_bar"
                        android:paddingStart="60dp"
                        android:paddingEnd="60dp"
                        android:max="206" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:text="Blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/blue_text"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="12sp" />

                    <TextView
                        android:text="xxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/blue_value_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textAlignment="viewEnd"
                        android:textSize="12sp" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/blue_bar"
                        android:paddingStart="60dp"
                        android:paddingEnd="60dp"
                        android:max="206" />

                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/image_card"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:srcCompat="@drawable/display_image"
                android:id="@+id/imageView3"
                android:padding="5dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/brightness_card"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brightness"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:text="xxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brightness_value_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:paddingTop="45dp"
                    android:paddingEnd="10dp"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brightness_bar"
                    android:paddingBottom="15dp"
                    android:paddingTop="45dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="60dp"
                    android:max="50"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/contrast_card"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Contrast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contrast"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:text="xxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contrast_value_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:paddingTop="45dp"
                    android:paddingEnd="10dp"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contrast_bar"
                    android:paddingBottom="15dp"
                    android:paddingTop="45dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="60dp"
                    android:max="50"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/saturation_card"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="2dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Saturation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturation"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:text="xxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturation_value_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:paddingTop="45dp"
                    android:paddingEnd="10dp"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturation_bar"
                    android:paddingBottom="15dp"
                    android:paddingTop="45dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="60dp"
                    android:max="59"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>